/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
text{
  display: inline-block;
  color:#000;
  font-size:14px;
}
input{
  font-size:14px;
}
.calendar-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1000px;
  z-index: 9;
  background: rgba(0,0,0,0.6);
  display:none;
}
.calendar{
  background-color:white;
  padding-top: 10px;
  color: rgba(245,166,35,1);
  border-top: 2rpx solid rgba(245,166,35,1);
}